 @using AIFitnessProject.Core.Models.DailyDietPlan
 @model ICollection<DailyDietPlanViewModel>

@{
    ViewData["Title"] = "Всички мои дневни хранителни планове" /* "Всички мои хранения от хранителния режим" */;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Training Plans</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="text-center text-white mb-5 display-4 fw-bold animate__animated animate__fadeInDown">
            <i class="fas fa-utensils me-2"></i>@ViewData["Title"]
        </h1>
        <div class="row g-4">
            @foreach (var dailyDietPlan in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="training-card" data-id="@dailyDietPlan.Id" data-complexity="@dailyDietPlan.Meals.First().DificultyLevel">
                        @if (dailyDietPlan.ImageUrl.StartsWith("/img"))
                        {

                            <img src="@dailyDietPlan.ImageUrl" class="card-image w-100" alt="Training">
                        }
                        else
                        {
                            <img src="data:image/jpeg;base64,@dailyDietPlan.ImageUrl" class="card-image w-100" alt="Training">
                        }
                        <div class="card-body">
                            <h3 class="mb-4 fw-bold text-primary">@dailyDietPlan.Title</h3>
                            <span class="text-primary"> <h5>Ден:  </h5></span><p>@dailyDietPlan.DayOfWeek</p>
                            <div class="description-wrapper">
                                @foreach (var meal in dailyDietPlan.Meals)
                                {
                                   
                                    <div class="exercise">
                                        <span class="text-primary"> <h5>@meal.MealTime: </h5></span><p>@meal.Name - @meal.Calories калории</p>
                                    </div>
                                }

                            </div>
                            <div class="button-group d-flex justify-content-end gap-2">
                                <a asp-action="Details" asp-controller="Diet" asp-route-id="@dailyDietPlan.Id" asp-area="Dietitian" class="btn btn-custom btn-details">
                                    <i class="fas fa-info-circle me-2"></i>Детайли
                                </a>
                                <a asp-action="Edit" asp-controller="Diet" asp-route-id="@dailyDietPlan.Id" asp-area="Dietitian" class="btn btn-custom btn-edit">
                                    <i class="fas fa-edit me-2"></i>Редактирай
                                </a>
                            </div>
                            <div class="animated-border"></div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="button-container">
            <form id="attachWorkoutForm" method="post" asp-action="AttachWorkouts" asp-controller="Workout">
                <input type="hidden" name="selectedWorkoutIds" id="selectedWorkoutIds" />
                <input type="hidden" name="trainingPlanId" value="@Model.FirstOrDefault()?.DietId" />

                <button type="submit" id="attachWorkoutBtn" class="btn btn-attach" disabled>
                    📌 Прикачи дневен хранителен план
                </button>
                <a asp-action="Details" asp-controller="Diet" asp-area="Dietitian" class="btn btn-custom btn-details">
                    ➕ Създай дневен хранителен план
                </a>
            </form>
            <div class="filters">
                <select id="complexityFilter">
                    <option value="">Търсене по сложност</option>
                    <option value="Лесно">Лесно</option>
                    <option value="Средно">Средно-Напреднал</option>
                    <option value="Трудно">Трудно</option>
                </select>
            </div>
        </div>
    </div>
</body>

 <script>
    document.querySelectorAll('select').forEach(select => {
        select.addEventListener('change', filterWorkouts);
    });

    function filterWorkouts() {
        const complexity = document.getElementById('complexityFilter').value;

        document.querySelectorAll('.training-card').forEach(card => {
            const cardComplexity = card.dataset.complexity;

            const complexityMatch = !complexity || cardComplexity === complexity;

            card.style.display = (complexityMatch) ? 'block' : 'none';
        });
    }
 </script>
</html>
