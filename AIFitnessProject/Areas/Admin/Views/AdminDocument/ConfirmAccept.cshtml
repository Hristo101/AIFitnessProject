@using AIFitnessProject.Core.Models.Document
@model AllDocumentsViewModel

<div class="container animate-card">
    <div class="confirmation-header">
        <h2>Сигурни ли сте, че искате да приемете кандидатурата?</h2>
    </div>

    <div class="profile-info">
        <div class="profile-picture">
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfilePictureUrl)" alt="Profile Picture">
        </div>
        <div class="profile-details">
            <p><strong>Име:</strong> @Model.FirstName @Model.LastName</p>
            <p><strong>Позиция:</strong> @Model.Position</p>
            <p><strong>Специализация:</strong> @Model.Specialization</p>
        </div>
    </div>

    <div class="confirmation-actions">
        <button class="btn accept">Приеми</button>
        <button class="btn back">Назад</button>
    </div>
</div>
