@using AIFitnessProject.Core.Models.TrainingPlan
 @model ICollection<AllTrainingPlanViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Training Plans</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row g-4">
            @foreach (var training in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="training-card">
                        <img src="@Url.Content(training.ImageUrl)" class="card-image w-100" alt="Training">
                        <div class="card-body">
                            <h3 class="mb-4 fw-bold text-primary">@training.TitleOfTriningPlan</h3>
                            <div class="description-wrapper">
                                <div class="description-text">@training.DescriptionOfTriningPlan</div>
                                <button class="expand-button" onclick="toggleDescription(this)">
                                    <i class="fas fa-chevron-down text-muted"></i>
                                </button>
                            </div>
                            <div class="button-group d-flex justify-content-end gap-2">
                                <a asp-action="Details" asp-controller="TrainingPlan" asp-route-id="@training.Id" asp-area="Trainer" class="btn btn-custom btn-details">
                                    <i class="fas fa-info-circle me-2"></i>Details
                                </a>
                                <a asp-action="Edit" asp-controller="TrainingPlan" asp-route-id="@training.Id" asp-area="Trainer" class="btn btn-custom btn-edit">
                                    <i class="fas fa-edit me-2"></i>Edit
                                </a>
                            </div>
                            <div class="animated-border"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        function toggleDescription(button) {
            const wrapper = button.closest('.description-wrapper');
            const text = wrapper.querySelector('.description-text');
            const icon = button.querySelector('i');

            text.classList.toggle('expanded');
            icon.classList.toggle('fa-chevron-down');
            icon.classList.toggle('fa-chevron-up');

            if (text.classList.contains('expanded')) {
                const card = wrapper.closest('.training-card');
                const cardTop = card.getBoundingClientRect().top;
                const offset = window.pageYOffset + cardTop - 20;
                window.scrollTo({ top: offset, behavior: 'smooth' });
            }
        }
    </script>
</body>
</html>
<link rel="stylesheet" href="~/css/TrainingPlan/AllTrainingPlan.css" />