@using AIFitnessProject.Infrastructure.Data
@using AIFitnessProject.Infrastructure.Data.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext DbContext

@{
    var user = await UserManager.GetUserAsync(User);
    bool hasCalendar = false;
    bool hasCalendar2 = false;
    if (user != null)
    {
        hasCalendar = DbContext.TrainingPlans.Any(tp => tp.UserId == user.Id && tp.IsInCalendar);
        hasCalendar2 = DbContext.Diets.Any(tp => tp.UserId == user.Id && tp.IsInCalendar);
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Фитнес Интелект</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        nav.navbar {
            background-color: #343a40 !important;
            width: 100%;
            padding: 10px 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-nav {
            display: flex;
            gap: 20px;
            align-items: center;
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

            .navbar-nav .nav-link {
                color: #ffffff !important;
                font-weight: bold;
                text-transform: uppercase;
                text-decoration: none;
                padding: 10px 15px;
                border-radius: 5px;
                transition: background-color 0.3s, transform 0.3s;
            }

                .navbar-nav .nav-link:hover {
                    background-color: #f39c12;
                    color: #ffffff !important;
                    transform: scale(1.05);
                }

        .navbar-brand {
            color: #ffffff !important;
            font-size: 22px;
            font-weight: bold;
            text-transform: uppercase;
            transition: color 0.3s;
        }

            .navbar-brand:hover {
                color: #f39c12 !important;
            }

        .navbar-nav .nav-link i {
            margin-right: 8px;
            color: #f39c12;
        }

        body {
            background-color: #f8f9fa;
            color: #ecf0f1;
        }

        .container {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        }

        .header-styles {
            position: sticky;
            width: 100%;
            z-index: 1;
            margin-bottom: 2em;
        }
    </style>
</head>
<body>
    <header class="header-styles">
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Фитнес Интелект</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i>Начало</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs"><i class="fa fa-user-shield"></i>За Нас</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact"><i class="fa fa-envelope"></i>Контакти</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <button id="btn-message" class="button-message">
                                    <div class="content-avatar">
                                        <div class="status-user"></div>
                                        <div class="avatar">
                                            <svg class="user-img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                                <path d="M12,12.5c-3.04,0-5.5,1.73-5.5,3.5s2.46,3.5,5.5,3.5,5.5-1.73,5.5-3.5-2.46-3.5-5.5-3.5Zm0-.5c1.66,0,3-1.34,3-3s-1.34-3-3-3-3,1.34-3,3,1.34,3,3,3Z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                    <div class="notice-content">
                                        <div class="username">Нови нотификации</div>
                                        <div class="lable-message">
                                            Нотификации<span class="number-message">0</span>
                                        </div>
                                    </div>
                                </button>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder().withUrl("/notificationHub").build();

        connection.on("ReceiveNotification", function (message) {
            alert(`🔔 Нова нотификация: ${message}`);
            document.querySelector(".number-message").textContent = parseInt(document.querySelector(".number-message").textContent) + 1;
        });

        connection.start().catch(err => console.error(err.toString()));
    </script>
</body>
</html>
