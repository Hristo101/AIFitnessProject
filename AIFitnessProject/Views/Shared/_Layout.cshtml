<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AIFitnessProject</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        /* Стилове за навигацията */
        nav.navbar {
            background-color: #343a40 !important;
            width: 100%;
            padding: 10px 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            position: sticky; /* Навигацията остава фиксирана при скрол */
            top: 0;
            z-index: 1000;
        }

        /* Менюто вътре в навигацията */
        .navbar-nav {
            display: flex;
            gap: 20px;
            align-items: center;
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

            .navbar-nav .nav-link {
                color: #ffffff !important;
                font-weight: bold;
                text-transform: uppercase;
                text-decoration: none;
                padding: 10px 15px;
                border-radius: 5px;
                transition: background-color 0.3s, transform 0.3s;
            }

                .navbar-nav .nav-link:hover {
                    background-color: #f39c12;
                    color: #ffffff !important;
                    transform: scale(1.05); /* Лек zoom ефект */
                }

        /* Лого на навигацията */
        .navbar-brand {
            color: #ffffff !important;
            font-size: 22px;
            font-weight: bold;
            text-transform: uppercase;
            transition: color 0.3s;
        }

            .navbar-brand:hover {
                color: #f39c12 !important;
            }

        /* Икони в навигацията */
        .navbar-nav .nav-link i {
            margin-right: 8px;
            color: #f39c12;
        }

        /* Основен фон */
        body {
            background-color: #f8f9fa; /* Тъмен фон за цялата страница */
            color: #ecf0f1; /* Светъл текст */
        }

        /* Контейнер за съдържанието */
        .container {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <!-- Лого -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AIFitnessProject</a>

                <!-- Бутон за мобилни устройства -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Меню -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <!-- Опции за гости -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs"><i class="fa fa-user-shield"></i> About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact"><i class="fa fa-envelope"></i> Contact</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Опции за автентикирани потребители -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="coachesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Треньори
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="coachesDropdown">
                                    <li><a class="dropdown-item" href="#">Нашите треньори</a></li>
                                    <li><a class="dropdown-item" href="#">Как работим</a></li>
                                    <li><a class="dropdown-item" href="#">Подаване на документи</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dieticiansDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Диетолози
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dieticiansDropdown">
                                    <li><a class="dropdown-item" href="#">Нашите диетолози</a></li>
                                    <li><a class="dropdown-item" href="#">Как работим</a></li>
                                    <li><a class="dropdown-item" href="#">Опция 2</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <!-- Login Partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Скриптове -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
