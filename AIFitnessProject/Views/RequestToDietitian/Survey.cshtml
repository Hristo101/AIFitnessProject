@using AIFitnessProject.Core.Models.RequestToDietitian
@model SurveyViewModel

@{
    ViewData["Title"] = "Анкета за хранителен режим";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container-xl py-5">
    <div class="card border-0 shadow-lg overflow-hidden">
        <div class="card-header bg-dark text-white py-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-dumbbell fa-2x me-3"></i>
                <div>
                    <h1 class="h3 mb-0">Персонален хранителен режим</h1>
                    <p class="mb-0 text-muted">Моля, попълнете внимателно всички полета</p>
                </div>
            </div>
        </div>

        <form method="post" enctype="multipart/form-data" asp-route-Id="@Model.DietitianId" asp-action="Survey" asp-controller="RequestToDietitian" class="needs-validation" novalidate>
            <div class="card-body p-5">
            
                <section class="mb-5">
                    <h3 class="h5 mb-4 text-primary">
                        <i class="fas fa-user-circle me-2"></i>Лична информация
                    </h3>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Първо име</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="FirstName" class="form-control" placeholder="Иван" required>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                <div class="invalid-feedback">Моля въведете вашето име</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Фамилия</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="LastName" class="form-control" placeholder="Иванов" required>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                                <div class="invalid-feedback">Моля въведете вашата фамилия</div>
                            </div>
                        </div>
                    </div>
                </section>

            
                <section class="mb-5">
                    <h3 class="h5 mb-4 text-primary">
                        <i class="fas fa-chart-line me-2"></i>Физически параметри
                    </h3>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Тегло (кг)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-weight"></i></span>
                                <input asp-for="Weight" type="number" step="0.1" class="form-control" placeholder="75.5" required>
                                <span asp-validation-for="Weight" class="text-danger"></span>
                                <div class="invalid-feedback">Моля въведете валидно тегло</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ръст (см)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-ruler-vertical"></i></span>
                                <input asp-for="Height" type="number" step="0.1" class="form-control" placeholder="180" required>
                                <span asp-validation-for="Height" class="text-danger"></span>
                                <div class="invalid-feedback">Моля въведете валиден ръст</div>
                            </div>
                        </div>
                    </div>
                </section>

            
                <section class="mb-5">
                    <h3 class="h5 mb-4 text-primary">
                        <i class="fas fa-running me-2"></i>Хранителна информация
                    </h3>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Основна цел</label>
                        <select asp-for="Target" class="form-select" required>
                            <option value="">Изберете цел...</option>
                            <option>Отслабване</option>
                            <option>Покачване на мускулна маса</option>
                            <option>Поддържане на форма</option>
                        </select>
                        <span asp-validation-for="Target" class="text-danger"></span>
                        <div class="invalid-feedback">Моля изберете вашата цел</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Ниво на опит</label>
                        <select asp-for="ExperienceLevel" class="form-select" required>
                            <option value="">Изберете ниво...</option>
                            <option value="начинаещ">Начинаещ</option>
                            <option value="средно-напреднал">Средно-напреднал</option>
                            <option value="напреднал">Напреднал</option>
                        </select>
                        <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
                        <div class="invalid-feedback">Моля изберете вашето ниво на опит</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Диетичен опит</label>
                        <textarea asp-for="DietBackground" class="form-control" rows="3"
                                  placeholder="Опишете вашия предишен диетичен опит..." required></textarea>
                        <span asp-validation-for="DietBackground" class="text-danger"></span>
                        <div class="invalid-feedback">Моля опишете вашия опит</div>
                    </div>

             
     
                    <div class="mb-4">
                        <label class="form-label fw-bold">Предпочитания за готвене</label>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-check-card">
                                    <input class="form-check-input" type="radio" value="Готов съм да си готвя сам" id="weights" asp-for="MealPreparationPreference">
                                    <label class="form-check-label" for="weights">
                                        <i class="fas fa-dumbbell me-2"></i>Готов съм да си готвя сам
                                    </label>
                               
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check-card">
                                    <input class="form-check-input" type="radio" value="Предпочитам бързи и лесни решения" id="cardio" asp-for="MealPreparationPreference">
                                    <label class="form-check-label" for="cardio">
                                        <i class="fas fa-heartbeat me-2"></i>Предпочитам бързи и лесни решения
                                    </label>
                          
                                   
                                </div>
                            </div>
                            <span asp-validation-for="MealPreparationPreference" class="text-danger"></span>
                        </div>
                    </div>

         
                    <div class="mb-4">
                        <label class="form-label fw-bold">Брой хранения за ден</label>
                        <select asp-for="PreferredMealsPerDay" class="form-select" required>
                            <option value="">Изберете брой дни...</option>
                            <option>2 хранения</option>
                            <option>3 хранения</option>
                            <option>4 хранения</option>
                            <option>5+ хранения</option>
                        </select>
                        <span asp-validation-for="PreferredMealsPerDay" class="text-danger"></span>
                        <div class="invalid-feedback">Моля изберете брой хранения</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Алергии от храни</label>
                        <textarea asp-for="FoodAllergies" class="form-control" rows="3"
                                  placeholder="Въведете вашите алергии от храни..." required></textarea>
                        <span asp-validation-for="FoodAllergies" class="text-danger"></span>
                        <div class="invalid-feedback">Моля въведете вашите алергии от храни</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Любими храни</label>
                        <textarea asp-for="FavouriteFoods" class="form-control" rows="3"
                                  placeholder="Въведете вашите любими храни..." required></textarea>
                        <span asp-validation-for="FavouriteFoods" class="text-danger"></span>
                        <div class="invalid-feedback">Моля Въведете вашите любими храни</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Непредпочитани храни</label>
                        <textarea asp-for="DislikedFoods" class="form-control" rows="3"
                                  placeholder="Въведете вашите непредпочитани храни..." required></textarea>
                        <span asp-validation-for="DislikedFoods" class="text-danger"></span>
                        <div class="invalid-feedback">Моля Въведете вашите непредпочитани храни</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Използвани добавки</label>
                        <textarea asp-for="SupplementsUsed" class="form-control" rows="3"
                                  placeholder="Въведете вашите използвани добавки..." required></textarea>
                        <span asp-validation-for="SupplementsUsed" class="text-danger"></span>
                        <div class="invalid-feedback">Моля въведете вашите използвани добавки</div>
                    </div>
                </section>


                <section class="mb-5">
                    <h3 class="h5 mb-4 text-primary">
                        <i class="fas fa-heartbeat me-2"></i>Здравословни проблеми
                    </h3>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Тази информация е критична за съставянето на безопасен хранителен режим
                    </div>
                    <textarea asp-for="HealthIssues" class="form-control" rows="3"
                              placeholder="Въведете вашите здравословни проблеми..." required></textarea>
                    <span asp-validation-for="HealthIssues" class="text-danger"></span>
                    <div class="invalid-feedback">Моля попълнете здравословното си състояние</div>
                </section>

              
                <section class="mb-4">
                    <h3 class="h5 mb-4 text-primary">
                        <i class="fas fa-camera me-2"></i>Визуална информация
                    </h3>
                    <div class="file-upload-wrapper">
                        <input type="file" id="profilePictures" name="ProfilePictures"
                               class="form-control visually-hidden" multiple accept="image/*">
                        <label for="profilePictures" class="file-upload-label">
                            <div class="d-flex flex-column align-items-center p-5 border-2 border-dashed">
                                <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                <h5 class="mb-2">Провлачете снимки или кликнете за избор</h5>
                                <p class="text-muted mb-0">Максимален размер на файл: 5MB</p>
                                <p class="text-muted">Поддържани формати: .jpg, .png</p>
                            </div>
                        </label>
                        <span asp-validation-for="ProfilePictures" class="text-danger"></span>
                        <div id="imagePreview" class="row g-3 mt-3"></div>
                    </div>
                </section>
            </div>

            <div class="card-footer bg-light py-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="terms" required>
                        <label class="form-check-label" for="terms">
                            Съгласявам се с обработката на личните данни
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                        <i class="fas fa-paper-plane me-2"></i>Изпрати анкетата
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="~/css/RequestToDietitian/Survey.css" />
<script>
    const fileInput = document.getElementById('profilePictures');
    const previewContainer = document.getElementById('imagePreview');

    fileInput.addEventListener('change', function (e) {
        previewContainer.innerHTML = '';
        Array.from(e.target.files).forEach(file => {
            if (!file.type.startsWith('image/')) return;

            const reader = new FileReader();
            reader.onload = (event) => {
                const col = document.createElement('div');
                col.className = 'col-6 col-md-4 col-lg-3';
                col.innerHTML = `
                            <div class="card shadow-sm">
                                <img src="${event.target.result}" class="card-img-top" alt="Preview">
                                <div class="card-footer py-2">
                                    <small class="text-muted">${file.name}</small>
                                    <button type="button" class="btn btn-danger btn-sm float-end" onclick="this.parentElement.parentElement.parentElement.remove()">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        `;
                previewContainer.appendChild(col);
            };
            reader.readAsDataURL(file);
        });
    });

    const dropZone = document.querySelector('.file-upload-label');

    dropZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropZone.classList.add('dragover');
    });

    dropZone.addEventListener('dragleave', () => {
        dropZone.classList.remove('dragover');
    });

    dropZone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropZone.classList.remove('dragover');
        fileInput.files = e.dataTransfer.files;
        fileInput.dispatchEvent(new Event('change'));
    });

    (() => {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>


<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 600,
        once: true,
        easing: 'ease-out-quad'
    });

    document.querySelectorAll('.form-check-card').forEach(card => {
        card.addEventListener('click', function () {
            this.style.transform = 'scale(0.98)';
            setTimeout(() => {
                this.style.transform = '';
            }, 200);
        });
    });

    document.querySelectorAll('.btn').forEach(btn => {
        btn.addEventListener('click', function (e) {
            let ripple = document.createElement('div');
            ripple.style.cssText = `
                    position: absolute;
                    width: 20px;
                    height: 20px;
                    background: rgba(255,255,255,0.5);
                    border-radius: 50%;
                    transform: translate(-50%, -50%);
                    pointer-events: none;
                    animation: ripple 0.6s linear;
                `;

            let rect = btn.getBoundingClientRect();
            ripple.style.left = `${e.clientX - rect.left}px`;
            ripple.style.top = `${e.clientY - rect.top}px`;

            btn.appendChild(ripple);
            setTimeout(() => ripple.remove(), 600);
        });
    });
</script>